<%- include('../components/head.ejs') %>
<link rel="stylesheet" href="/css/dashboard.css" />
<link rel="stylesheet" href="/css/navigation.css" />
<link rel="stylesheet" href="/css/transactions.css" />
<link rel="stylesheet" href="/css/modal.css" />

<body class="center">
  <%- include('../components/navigation.ejs') %>
  <section class="column column_middle">
    <div class="container filters">
      <button class="btn btn-primary" onclick="toggleModal()">
        Add expense
      </button>
    </div>
    <div class="container transactions">
      <% if(expenses.length > 0) { %> <% for(let expense of expenses) { %>
      <div class="container transaction-item">
        <h3 class="transaction-category"><%= expense.item.category %></h3>
        <p class="transaction-comment"><%= expense.item.comment %></p>
        <p class="transaction-value"><%= expense.item.value %> PLN</p>
        <p class="transaction-date"><%= expense.item.date %></p>
      </div>
      <% } %> <% } %>
    </div>
  </section>
  <section class="column column_right">
    <div class="container profile"></div>
  </section>
  <!-- modal -->
  <%- include('../components/modal.ejs') %>
</body>
<script src="/js/main.js"></script>
<%- include('../components/footer.ejs') %>
