<%- include('../components/head.ejs') %>
<link rel="stylesheet" href="/css/form.css" />

<body>
  <div class="container">
    <div class="wrapper">
      <% if(errorMessage) { %>
      <div class="error-msg"><%= errorMessage %></div>
      <% } %>
      <div class="title"><span>Reset password</span></div>
      <form class="form" action="/reset-password" method="POST">
        <div class="row">
          <label for="email" placeholder="Email Adress">Email Address</label>
          <input type="email" name="email" id="email" />
        </div>
        <div class="row">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="button btn-primary" type="submit">
            Reset password
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../components/footer.ejs') %>
</body>
