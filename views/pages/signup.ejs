<%- include('../components/head.ejs') %>
<link rel="stylesheet" href="/css/form.css" />

<body>
  <div class="container">
    <div class="wrapper">
      <% if(errorMessage) { %>
      <div class="error-msg"><%= errorMessage %></div>
      <% } %>
      <div class="title"><span>Get started for free</span></div>
      <form action="/signup" method="POST" novalidate>
        <div class="row">
          <label for="name">How you would like to be called?</label>
          <input
            type="text"
            name="name"
            id="name"
            value="<%= savedInput.name %>"
          />
        </div>
        <div class="row">
          <label for="email">Email Address</label>
          <input
            class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>"
            type="email"
            name="email"
            id="email"
            value="<%= savedInput.email %>"
          />
        </div>
        <div class="row">
          <label for="password">Password</label>
          <input
            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>"
            type="password"
            name="password"
            id="password"
            value="<%= savedInput.password %>"
          />
        </div>
        <div class="row">
          <label for="confirmPassword">Confirm password</label>
          <input
            class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : ''%>"
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            value="<%= savedInput.confirmPassword %>"
          />
        </div>
        <div class="row">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="button" type="submit" value="Login">
            Create account
          </button>
        </div>
        <div class="signup-link">
          Already a member? <a href="/login">Log in</a>
        </div>
      </form>
    </div>
  </div>

  <%- include('../components/footer.ejs') %>
</body>
